<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/color_holder"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:background="@color/manga_reader"></View>

    <com.truthower.suhang.mangareader.widget.bar.TopBar
        android:id="@+id/base_topbar"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_below="@+id/color_holder"
        android:background="@color/manga_reader"
        app:left_background="@drawable/back"
        app:title_text="标题"
        app:title_textColor="@color/white" />

    <FrameLayout
        android:id="@+id/base_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/base_topbar" />
</RelativeLayout>